# ===============================================
# PUBLIC URLS & SITE CONFIGURATION
# ===============================================

# Site URL - Used for canonical URLs, Open Graph, and sitemap generation
# Format: http://localhost:3000 (dev) or https://yourdomain.com (prod)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ===============================================
# SUPABASE DATABASE & STORAGE
# ===============================================
# Documentation: https://supabase.com/docs

# Supabase Project URL (found in Project Settings > API)
# Format: https://xxxxx.supabase.co
SUPABASE_URL=https://vsjsrbmcxryuodlqscnl.supabase.co

# Supabase Anonymous Key (found in Project Settings > API)
# Used for client-side queries with Row Level Security
SUPABASE_ANON_KEY=

# Supabase Service Role Key (found in Project Settings > API)
# NEVER expose this in client-side code - server-only!
# Used for admin operations that bypass RLS
SUPABASE_SERVICE_ROLE=

# ===============================================
# CONTACT INFORMATION (REQUIRED)
# ===============================================
# These values are used across ContactBar, ContactForm, and email templates
# Validation enforced by lib/env-validation.ts

# Contact Phone Number
# Format: E.164 format (+12055551234)
# Example: +17727779442
NEXT_PUBLIC_CONTACT_PHONE=

# Contact Email Address
# Format: standard email (user@domain.com)
# Example: hello@exoticbulldoglegacy.com
NEXT_PUBLIC_CONTACT_EMAIL=

# WhatsApp Number (optional)
# Format: digits only, no + or spaces (12055551234)
# Will be converted to wa.me link
NEXT_PUBLIC_WHATSAPP=

# Telegram Username (optional)
# Format: username without @ (exoticbulldoglegacy)
# Will be converted to t.me link
NEXT_PUBLIC_TELEGRAM_USERNAME=

# Full mailing address (optional override)
# Format: Street, City, ST ZIP, Country
NEXT_PUBLIC_CONTACT_ADDRESS=

# Business coordinates (latitude & longitude in decimal degrees)
# Used for Google Maps embeds and LocalBusiness structured data
NEXT_PUBLIC_CONTACT_LATITUDE=32.3668
NEXT_PUBLIC_CONTACT_LONGITUDE=-86.3

# Business hours (JSON array with day/opens/closes)
# Example: [{"day":"Monday","opens":"09:00","closes":"19:00"}]
NEXT_PUBLIC_CONTACT_HOURS=

# ===============================================
# EMAIL NOTIFICATIONS (RESEND)
# ===============================================
# Documentation: https://resend.com/docs

# Resend API Key (recommended for production)
# Get from: https://resend.com/api-keys
# Format: re_xxxxxxxxx
RESEND_API_KEY=

# From Email Address (must be verified in Resend)
# Default: noreply@exoticbulldoglegacy.com
RESEND_FROM_EMAIL=noreply@exoticbulldoglegacy.com

# Owner Email (receives inquiry notifications)
# Format: standard email
OWNER_EMAIL=

# ===============================================
# CAPTCHA (hCAPTCHA)
# ===============================================
# Documentation: https://docs.hcaptcha.com

# hCaptcha Site Key (required for contact form)
# Get from: https://dashboard.hcaptcha.com/sites
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=

# hCaptcha Secret Key (server-side verification)
# Get from: https://dashboard.hcaptcha.com/sites
HCAPTCHA_SECRET_KEY=

# Testing Bypass Token (development/test only - NEVER use in production!)
# Allows E2E tests to bypass captcha verification
NEXT_PUBLIC_HCAPTCHA_BYPASS_TOKEN=
HCAPTCHA_BYPASS_TOKEN=

# ===============================================
# ANALYTICS & MARKETING
# ===============================================

# Google Analytics 4 Measurement ID (optional but recommended)
# Get from: Google Analytics > Admin > Data Streams
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Meta Pixel ID (optional)
# Get from: Meta Events Manager > Pixels
# Format: numeric string
META_PIXEL_ID=

# GA4 API Secret (for Measurement Protocol - server-side events)
# Get from: Google Analytics > Admin > Data Streams > Measurement Protocol API secrets
GA4_API_SECRET=

# Meta Conversion API Access Token (for server-side events)
# Get from: Meta Events Manager > Settings > Conversions API
META_CONVERSION_API_TOKEN=

# Crisp Live Chat Website ID (optional)
# Get from: Crisp > Settings > Website Settings
# Format: UUID (xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx)
NEXT_PUBLIC_CRISP_WEBSITE_ID=

# ===============================================
# WEBHOOK MONITORING & ALERTING
# ===============================================

# Alert Emails (comma-separated list for webhook failure notifications)
# Format: email1@domain.com,email2@domain.com
# Defaults to OWNER_EMAIL if not specified
ALERT_EMAILS=

# Slack Webhook URL (optional - for webhook error notifications)
# Get from: Slack > Apps > Incoming Webhooks
# Format: https://hooks.slack.com/services/...
SLACK_WEBHOOK_URL=

# ===============================================
# PAYMENT PROCESSING
# ===============================================

# --- Stripe ---
# Documentation: https://stripe.com/docs

# Stripe Publishable Key (client-side)
# Get from: Stripe Dashboard > Developers > API Keys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Stripe Secret Key (server-side only)
STRIPE_SECRET_KEY=

# Stripe Webhook Secret (for webhook verification)
# Get from: Stripe Dashboard > Developers > Webhooks
STRIPE_WEBHOOK_SECRET=

# --- PayPal ---
# Documentation: https://developer.paypal.com/docs

# PayPal Client ID
# Get from: PayPal Developer Dashboard > My Apps & Credentials
PAYPAL_CLIENT_ID=

# PayPal Client Secret
PAYPAL_CLIENT_SECRET=

# PayPal Environment (sandbox or production)
PAYPAL_ENV=sandbox

# PayPal Webhook ID (for webhook signature verification)
# Get from: PayPal Developer Dashboard > Webhooks
PAYPAL_WEBHOOK_ID=

# ===============================================
# DEVELOPMENT
# ===============================================

# Node Environment (development, production, test)
NODE_ENV=development
